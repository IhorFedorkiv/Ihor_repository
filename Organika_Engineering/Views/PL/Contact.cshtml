@{
    Layout = "~/Views/Shared/_Layout _PL.cshtml";
}


<div class="contact" style="margin-top:100px">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <h2>KONTAKT</h2>

                <div class="num1">
                    <img src="~/Content/images/PhoneIcon.png">
                    <span>Zadzwoń do nas!</span>
                </div>
                <div class="num2">
                    <span>+38(067)503-96-99</span>
                    <span>+38(067)350-13-82</span>
                </div>
                <div class="num3">
                    <img src="~/Content/images/group.png" />
                    <span>Nasz adres</span>
                </div>
                <div class="num4">
                    <span>Ukraina</span>
                    <span>m. Czortków</span>
                </div>
                <div id="map" style="height:400px;width:100%;margin-bottom:50px;"></div>

            </div>
            <!--2 colum-->
            <div class="col-sm-6 col-md-6">
                <h2>Dane do kontaktu</h2>
                <form action="/PL/email_send" method="post">
                    <div class="form-group">
                        <label for="name">Imię</label>
                        <input type="text" name="nameClient" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Kontakty</label>
                        <input type="text" name="emailClient" class="form-control" id="email" placeholder="telefon lub e-mail">
                    </div>
                    <div class="textARR">
                        <label>Krótka wiadomość</label>
                        <textarea name="messageClient" placeholder="Krótko opisz, o czym chcesz porozmawiać"></textarea>
                    </div>
                    <button class="blueBTN">Wyślij</button>
                </form>

            </div>
        </div>
    </div>
</div>
<script>
    function initMap() {
        var element = document.getElementById('map');
        var options = {
            zoom: 5,
            center: { lat: 49.010884, lng: 25.802651 }
        };
        var myMap = new google.maps.Map(element, options);
        var marker = new google.maps.Marker({
            position: { lat: 49.010884, lng: 25.802651 },
            map: myMap
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHISVS5myIlbPXHXuMQEjJTi_SBqkSdG8&callback=initMap"></script>
