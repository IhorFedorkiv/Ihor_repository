<script>
    function initMap() {
        var element = document.getElementById('map');
        var options = {
            zoom: 5,
            center: { lat: 49.010884, lng: 25.802651 }
        };
        var myMap = new google.maps.Map(element, options);
        var marker = new google.maps.Marker({
            position: { lat: 49.010884, lng: 25.802651 },
            map: myMap
        });
    }
</script>
<script async defer
