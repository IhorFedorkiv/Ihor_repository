@{
    Layout = "~/Views/Shared/_Layout_UA.cshtml";
}

<div class="contact" style="margin-top:100px">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-6">
                <h2>Контакти</h2>

                <div class="num1">
                    <img src="~/Content/images/PhoneIcon.png">
                    <span>Дзвоніть нам!</span>
                </div>
                <div class="num2">
                    <span>+38(067)503-96-99</span>
                    <span>+38(067)350-13-82</span>
                </div>
                <div class="num3">
                    <img src="~/Content/images/group.png" />
                    <span>Наша адреса</span>
                </div>
                <div class="num4">
                    <span>Україна</span>
                    <span>м.Чортків</span>
                </div>
                <div id="map" style="height:400px;width:100%;margin-bottom:50px;"></div>

            </div>
            <!--2 colum-->
            <div class="col-sm-6 col-md-6">
                <h2>Форма зворотнього зв'язку</h2>
                <form action="/Home/email_send" method="post">
                    <div class="form-group">
                        <label for="name">Ім'я</label>
                        <input type="text" name="nameClient" class="form-control" id="name">
                    </div>
                    <div class="form-group">
                        <label for="email">Контакти</label>
                        <input type="text" name="emailClient" class="form-control" id="email" placeholder="phone or e-mail">
                    </div>
                    <div class="textARR">
                        <label>Коротке повідомлення</label>
                        <textarea name="messageClient" placeholder="Коротко опишіть про, що ви хочете поговорити"></textarea>
                    </div>
                    <button class="blueBTN">Відправити</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function initMap() {
        var element = document.getElementById('map');
        var options = {
            zoom: 5,
            center: { lat: 49.010884, lng: 25.802651 }
        };
        var myMap = new google.maps.Map(element, options);
        var marker = new google.maps.Marker({
            position: { lat: 49.010884, lng: 25.802651 },
            map: myMap
        });
    }
</script>
<script async defer
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDHISVS5myIlbPXHXuMQEjJTi_SBqkSdG8&callback=initMap"></script>

